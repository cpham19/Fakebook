@{
    ViewData["Title"] = "AddForum";
}
@model Forum

<div id="content">
    <h1 class="text-light">Add New Forum</h1>
    <form method="post">
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1">Forum Name</span>
            </div>
            <input class="form-control" type="text" name="ForumName" placeholder="Forum Name" required><button style="width:75px;">Add</button>
        </div>
        <br />
        <span asp-validation-for="ForumName" class="text-danger"></span><br />
    </form>
</div>