@{
    ViewData["Title"] = "Edit Topic";
}
@model Topic

<style>
    .input-group-prepend span {
        width: 120px;
        color: black;
        border: 0 !important;
    }
</style>

<div id="content">
    <h1 class="text-light">Editting Topic #@Model.TopicId</h1>
    <form method="post" asp-route-ForumName="@ViewBag.ForumName" asp-route-TopicId="@Model.TopicId" asp-route-TopicName="@ViewBag.TopicName">
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1">Topic Name</span>
            </div>
            <input class="form-control" type="text" name="TopicName" placeholder="Topic Name" value="@Model.TopicName" required />
        </div>
        <span asp-validation-for="TopicName" class="text-danger"></span>

        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1">Topic Content</span>
            </div>
            <textarea class="form-control" type="text" name="TopicContent" placeholder="Topic Content" required>@Model.TopicContent</textarea>
        </div>
        <span asp-validation-for="TopicContent" class="text-danger"></span>

        <button class="btn btn-lg btn-dark" type="submit">Edit</button>
    </form>
</div>