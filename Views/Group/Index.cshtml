@{
    ViewData["Title"] = "Groups Page";
}

<style>
    a {
        text-decoration: none;
        color: white;
    }

    a:hover {
        text-decoration: underline;
        color: red;
    }

    .col-sm-2 {
        padding-bottom: 5px;
    }

    .fa-book-reader {
        color: green;
    }

    @@media (max-width: 768px) {
        .thumbnail {
            width: 400px;
            height: 300px;
        }
    }
</style>

<div id="content">
    <div class="jumbotron">
        <div class="container">
            <h1 class="display-3">Groups</h1>
        </div>
    </div>
    <!-- Example row of columns -->
    <div class="container-fluid">
        <a asp-controller="Group" asp-action="AddGroup"><i class="fas fa-plus-circle"></i> Add Group</a>
        <br /><br />
        @foreach (var group in ViewBag.Groups)
        {
            <div class="row mb-4" style="background: rgba(71, 71, 71, 0.5);">
                <div class="col-md-2" style="padding: 20px;">
                    <a asp-controller="Group" asp-action="ViewGroup" asp-route-GroupId="@group.GroupId">
                        <img src="@group.GroupPictureUrl" class="rounded-0 img-thumbnail thumbnail" style="border: solid 5px green;" />
                    </a>
                </div>
                <div class="col-md-9" style="padding: 20px;">
                    <div class="row">
                        <div class="col-md-12">
                            <h1>
                                <a style="font-size:50px;" asp-controller="Group" asp-action="ViewGroup" asp-route-GroupId="@group.GroupId">@group.GroupName</a>
                            </h1><br>
                            <h4 style="color:white;">
                                @group.Description
                            </h4>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <hr>
</div>