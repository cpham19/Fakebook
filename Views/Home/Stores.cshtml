
@{
    ViewData["Title"] = "Stores";
}

<div class="jumbotron">
    <div class="container">
        <h1 class="display-3">My Stores</h1>
    </div>
</div>

<div>
    <a asp-controller="Marketplace" asp-action="Cart" class="btn btn-info">View Cart (@ViewBag.Cart.Items.Count)</a>
</div>

<div class="container">
    <!-- Example row of columns -->
    <div class="row">
        @foreach (var store in ViewBag.Stores)
        {
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <img src="@store.StoreImageUrl" class="card-img-top" width="200px" height="200px" />
                    <h1>@store.StoreName</h1>
                    <p class="card-text">@store.StoreDescription</p>
                    <a class="card-link" asp-controller="Marketplace" asp-action="Store" asp-route-StoreId="@store.StoreId">View</a>
                </div>
            </div>
        }
    </div>
    <hr>
</div> <!-- /container -->
