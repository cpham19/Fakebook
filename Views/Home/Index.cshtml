@{
    ViewData["Title"] = "Home Page";
    var person = (Person)ViewData["Person"];

}

<style type="text/css">
    .card-img-top {
        border: 1px solid black;
        border-color: black;
    }

    .col-md-8 {
        border: 1px solid;
        background-color: #f5f5dc;
    }

    .card {
        border: 1px solid;
        background-color: #f5f5dc;
    }

    button {
        background: Transparent no-repeat;
        border: none;
        cursor:pointer;
        overflow: hidden;
        outline:none;
        float:left;
    }

    .mb-4 {
        background-color: azure;
    }

    .fa-edit {
        color:green;
    }

    .fa-trash-alt {
        color:red;
    }

    .fa-plus-square {
        color:blue;
        font-size: 2em;
    }

     @@media only screen and (max-width: 600px) {
        .col-md-4 {
            min-width:590x;
            max-width: 590px;
        }

       a, p{
           font-size: 18px;
       }
     }
</style>

<div class="row">
    <!-- About me-->
    <div class="col-md-4 d-flex align-items-stretch">
        <div class="card">
            <img class="card-img-top" src="https://robohash.org/@person.Name" alt="Card image cap">
            <h1 class="text-center">@person.Name</h1>
            <div class="card-body">
                <h5 class="card-title">About Me <a asp-controller="Home" asp-action="Edit"><i class="fas fa-edit"></i></a></h5>
                <p class="card-text">@person.ProfileDescription</p>
                <a asp-controller="Home" asp-action="Friends"><i class="fas fa-user-friends"></i> Friends (@person.Friends.Count)</a><br />
                <a asp-controller="Home" asp-action="Groups"><i class="fas fa-layer-group"></i> Groups (@person.Groups.Count)</a><br />
                <a asp-controller="Home" asp-action="Blogs"><i class="fab fa-blogger"></i> Blogs (@person.Blogs.Count)</a><br />
                <a asp-controller="Home" asp-action="Stores"><i class="fas fa-store"></i> Stores (@person.Stores.Count)</a><br />
                <a asp-controller="Home" asp-action="Reviews"><i class="fas fa-comment-dots"></i> Reviews (@person.Reviews.Count)</a>
            </div>
        </div>
        <br /><br />
    </div>
    <!-- Wall Entries Column -->
    <div class="col-md-8">
        <h1 class="my-4 text-center">My Wall</h1>

        <div class="card">
            <form method="post" asp-controller="Home" asp-action="AddWallPost">
                <textarea type="text" name="Description" class="form-control" placeholder="New Post" required></textarea>
                <button type="submit"><i class="fas fa-plus-square"></i></button>
            </form>
        </div>
        <br /><br /><br/>
        <!-- Wall Post -->
        @foreach (var post in ViewBag.WallPosts)
        {
            <div class="card mb-4">
                <div class="card-body">
                    <p class="card-text">@post.Description</p>
                </div>
                <!-- Main Posts -->
                <div class="card-footer text-muted">
                    <p>Posted on @post.DatePosted by
                    <a asp-controller="User" asp-action="Index" asp-route-id="@post.PosterId">@post.PosterName</a>
                    @if (person.PersonId == post.PosterId)
                    {
                        <a asp-controller="Home" asp-action="EditWallPost" asp-route-WallPostId="@post.WallPostId"><i class="fas fa-edit"></i></a>
                        <a asp-controller="Home" asp-action="DeleteWallPost" asp-route-WallPostId="@post.WallPostId"><i class="fas fa-trash-alt"></i></a>
                    }
                    </p>
                </div>
                <!-- Replies to the Main Posts -->
                @foreach (var reply in post.Replies)
                {
                    <div class="card-body">
                        <p class="card-text">@reply.Description</p>
                    </div>
                    <div class="card-footer text-muted">
                        Posted on @reply.DatePosted by
                        <a asp-controller="User" asp-action="Index" asp-route-id="@reply.PosterId">@reply.PosterName</a>
                        @if (person.PersonId == reply.PosterId)
                        {
                            <a asp-controller="Home" asp-action="EditReplyPost" asp-route-ReplyPostId="@reply.ReplyPostId"><i class="fas fa-edit"></i></a>
                            <a asp-controller="Home" asp-action="DeleteReplyPost" asp-route-ReplyPostId="@reply.ReplyPostId"><i class="fas fa-trash-alt"></i></a>
                        }
                    </div>
                }
                <form method="post" asp-controller="Home" asp-action="AddReplyPost">
                    <textarea type="text" name="Description" class="form-control" placeholder="New Reply" required></textarea>
                    <input type="text" name="WallPostId" class="form-control" value=@post.WallPostId hidden />
                    <button type="submit"><i class="fas fa-plus-square"></i></button>
                </form>
            </div>
        }
    </div>
</div>