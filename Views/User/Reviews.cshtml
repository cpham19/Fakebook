@{
    ViewData["Title"] = "Reviews";
}

<style>
    .card {
        width: 300px;
        border: 2px solid;
    }

    .col-sm-2 {
        padding-bottom: 5px;
    }

    @@media (max-width: 768px) {
        .card {
            width: 500px;
        }
    }
</style>


<div id="content">
    <div class="jumbotron">
        <div class="container-fluid">
            <h1 class="display-3 text-center">Reviews</h1>
        </div>
    </div>

    @if (ViewBag.ItemsReviewed.Count == 0)
    {
        <div class="jumbotron">
            <div class="container-fluid">
                <h1 class="display-5">You have no reviews.</h1>
            </div>
        </div>
    }
    else
    {
        <!-- Example row of columns -->
        <div class="row">
            @foreach (var itemReview in ViewBag.ItemsReviewed)
            {
                <div class="col-sm-2 d-flex portfolio-item">
                    <div class="card">
                        <a asp-controller="Marketplace" asp-action="StoreItem" asp-route-StoreId="@itemReview.StoreId" asp-route-StoreItemId="@itemReview.StoreItemId">
                            <div class="card-body">
                                <img class="card-img-top" src="@itemReview.ItemImageUrl">
                                <h1 class="card-title text-center">@itemReview.ItemName</h1>
                                @foreach (var review in itemReview.Reviews)
                                {
                                    <p class="lead">@review.Description</p>
                                    <div class="card-footer text-muted">
                                        Reviewed on @review.DatePosted
                                    </div>
                                    <hr />
                                }
                            </div>
                        </a>
                    </div>
                </div>
            }
        </div>
        <hr>
    }
</div>