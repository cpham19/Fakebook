@{
    ViewData["Title"] = "Groups";
}

<style>
    .card {
        width: 300px;
        border: 2px solid;
    }

    a {text-decoration: none;}
    a:hover {text-decoration: underline;}

    .col-sm-2 {
        padding-bottom: 5px;
    }

    .fa-book-reader {
        color:green;
    }

    @@media (max-width: 768px) {
        .card {
            width: 500px;
        }
    }
</style>

<div id="content">
    <div class="jumbotron">
        <div class="container-fluid">
            <h1 class="display-3 text-center">Groups</h1>
        </div>
    </div>

    @if (ViewBag.Groups.Count == 0)
    {
        <div class="jumbotron">
            <div class="container-fluid">
                <h1 class="display-5">You have no groups.</h1>
            </div>
        </div>
    }
    else
    {
        <!-- Example row of columns -->
        <div class="container-fluid">
            @foreach (var group in ViewBag.Groups)
            {
                <div class="row" style="border:solid 1px;">
                    <div class="col-md-2">
                        <img src="@group.GroupPictureUrl" class="img-thumbnail" />
                    </div>
                    <div class="col-md-9">
                        <div class="row">
                            <div class="col-md-12">
                                <h1>
                                    <a style="color:blue;" asp-controller="Group" asp-action="ViewGroup" asp-route-GroupId="@group.GroupId">@group.GroupName</a>
                                </h1><br>
                                <h3>
                                    @group.Description
                                </h3>
                            </div>
                            <div class="col-md-12">
                                <span class="label label-info">
                                    <a>@group.Members.Count Members</a>
                                </span><br>
                                <a class="card-link" style="color:black;" asp-controller="User" asp-action="LeaveGroup" asp-route-GroupId="@group.GroupId"><i class="fas fa-sign-out-alt"></i> Leave</a>
                                <a class="card-link" style="color:red;" asp-controller="User" asp-action="DeleteGroup" asp-route-GroupId="@group.GroupId"><i class="fas fa-trash-alt"></i> Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <hr>
    }
</div>