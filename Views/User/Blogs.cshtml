@{
    ViewData["Title"] = "Blogs";
}

<style>
    .card {
        width: 300px;
        border: 2px solid;
    }

    .col-sm-2 {
        padding-bottom: 5px;
    }

    @@media (max-width: 768px) {
        .card {
            width: 500px;
        }
    }
</style>

<div id="content">
    <div class="jumbotron">
        <div class="container-fluid">
            <h1 class="display-3 text-center">Blogs</h1>
        </div>
    </div>

    @if (ViewBag.Blogs.Count == 0)
    {
        <div class="jumbotron">
            <div class="container-fluid">
                <h1 class="display-4">You have no blogs.</h1>
            </div>
        </div>
    }
    else
    {
        <!-- Example row of columns -->
        <div class="row">
            @foreach (var blog in ViewBag.Blogs)
            {
                <div class="col-sm-2 d-flex portfolio-item">
                    <div class="card">
                        <a asp-controller="Blog" asp-action="ReadBlog" asp-route-BlogId="@blog.BlogId">
                            <div class="card-body">
                                <img src="@blog.PictureUrl" class="card-img-top" />
                                <h1>@blog.Title</h1>
                                <p class="card-text">@blog.ModifiedDescription()</p>
                            </div>
                        </a>
                        <div class="card-footer">
                            <small>
                                <a class="card-link" asp-controller="Blog" asp-action="ReadBlog" asp-route-BlogId="@blog.BlogId"><i class="fas fa-book-reader"></i> View</a>
                            </small>
                        </div>
                    </div>
                </div>
            }
        </div>
        <hr>
    }
</div>