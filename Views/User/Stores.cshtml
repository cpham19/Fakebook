
@{
    ViewData["Title"] = "Stores";
}

<style>
     @@media only screen and (max-width: 600px) {
        .card {
            width: 500px;
        }
    }
</style>

<div class="jumbotron">
    <div class="container">
        <h1 class="display-3">Their Stores</h1>
    </div>
</div>

@if (ViewBag.Stores.Count == 0)
{
    <div class="jumbotron">
        <div class="container">
            <h1 class="display-5">They have no stores.</h1>
        </div>
    </div>
}
else
{
    <div class="container">
        <!-- Example row of columns -->
        <div class="row">
            @foreach (var store in ViewBag.Stores)
            {
                <div class="col-sm-4 d-flex align-items-stretch portfolio-item">
                    <div class="card">
                        <div class="card-body">
                            <img src="@store.StoreImageUrl" class="card-img-top"/>
                            <h1>@store.StoreName</h1>
                            <p class="card-text">@store.StoreDescription</p>
                            <a class="card-link" asp-controller="Marketplace" asp-action="Store" asp-route-StoreId="@store.StoreId"><i class="fas fa-book-reader"></i> View</a>
                        </div>
                    </div>
                </div>
            }
        </div>
        <hr>
    </div> <!-- /container -->
}
