@{
    ViewData["Title"] = "Read Blog";
}

@model Blog

 <a asp-controller="Blog" asp-action="Index">Back</a>
<!-- Page Content -->
<div class="container">

    <div class="row">

        <!-- Post Content Column -->
        <div class="col-lg-8">

            <!-- Title -->
            <h1 class="mt-4">@Model.Title</h1>

            <!-- Author -->
            <p class="lead">
                by
                <a asp-controller="User" asp-action="Index" asp-route-id="@Model.PosterId">@Model.PosterName</a>
                @if (ViewBag.PersonId == Model.PosterId)
                {
                    <a asp-controller="Blog" asp-action="EditBlog" asp-route-BlogId="@Model.BlogId">Edit</a>
                    <a asp-controller="Blog" asp-action="DeleteBlog" asp-route-BlogId="@Model.BlogId">Delete</a>
                }
            </p>

            <hr>

            <!-- Date/Time -->
            <p>Posted on @Model.DatePosted</p>

            <hr>

            <!-- Preview Image -->
            <img class="img-fluid rounded" src="@Model.PictureUrl" alt="">

            <hr>

            <!-- Post Content -->
            <p class="lead">@Model.Description</p>
            <hr>

            <!-- Comments Form -->
            <div class="card my-4">
                <h5 class="card-header">Leave a Comment:</h5>
                <div class="card-body">
                    <form method="post" asp-controller="Blog" asp-action="AddBlogComment">
                        <div class="form-group">
                            <input type="text" name="BlogId" class="form-control" value=@Model.BlogId hidden />
                            <textarea class="form-control" name="Description" placeholder="Description" rows="3"></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>

            <!-- Single Comment -->
            @foreach (var comment in Model.BlogComments)
            {
                <div class="media mb-4">
                    <img class="d-flex mr-3 rounded-circle" src="https://robohash.org/@comment.PosterName" width="50px" height="50px" alt="">
                    <div class="media-body">
                        <h5 class="mt-0">
                            <a asp-controller="User" asp-action="Index" asp-route-id="@comment.PosterId">@comment.PosterName</a>
                        </h5>
                        @comment.Description
                        <hr />
                        (Posted on @comment.DatePosted)
                        @if (ViewBag.PersonId == comment.PosterId)
                        {
                            <a asp-controller="Blog" asp-action="EditBlogComment" asp-route-BlogId="@comment.BlogId" asp-route-BlogCommentId="@comment.BlogCommentId">Edit</a>
                            <a asp-controller="Blog" asp-action="DeleteBlogComment" asp-route-BlogId="@comment.BlogId" asp-route-BlogCommentId="@comment.BlogCommentId">Delete</a>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
    <!-- /.row -->

</div>
<!-- /.container -->
