@{
    ViewData["Title"] = "Blog Page";
}
<div class="jumbotron">
    <div class="container">
        <h1 class="display-3">Blogs</h1>
    </div>
</div>

<a asp-controller="Blog" asp-action="AddBlog">Add Blog</a>

<!-- Page Content -->
<div class="container">

    <div class="row">
        <div class="col-md-8">
            <!-- Blog Entries Column -->
            @foreach (var blog in ViewBag.Blogs)
            {
                <h1 class="my-4">@blog.Headline</h1>
                <!-- Blog Post -->
                <div class="card mb-4">
                    <img class="card-img-top" src="@blog.PictureUrl" alt="Card image cap" width="200px" height="400px">
                    <div class="card-body">
                        <h2 class="card-title">@blog.Title</h2>
                        <p class="card-text">@blog.Description</p>
                        <a class="btn btn-primary" asp-controller="Blog" asp-action="ReadBlog" asp-route-BlogId="@blog.BlogId">Read More</a>
                    </div>
                    <div class="card-footer text-muted">
                        Posted on @blog.DatePosted by
                        <a asp-controller="User" asp-action="Index" asp-route-id="@blog.PosterId">@blog.PosterName</a>
                    </div>
                </div>

            }
        </div>

        <!-- Sidebar Widgets Column -->
        <div class="col-md-4">
            <!-- Search Widget -->
            <div class="card my-4">
                <h5 class="card-header">Search</h5>
                <div class="card-body">
                    <form class="input-group" asp-controller="Blog" asp-action="SearchQuery">
                        <input type="text" name="s" class="form-control" placeholder="Search for..." value="@ViewBag.Query">
                        <span class="input-group-btn">
                            <button type="submit" class="btn btn-secondary">Go!</button>
                        </span>
                    </form>
                </div>
            </div>

            <!-- Categories Widget -->
            <div class="card my-4">
                <h5 class="card-header">Categories</h5>
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <ul class="list-unstyled mb-0">
                                <li>
                                    <a href="#">Web Design</a>
                                </li>
                                <li>
                                    <a href="#">HTML</a>
                                </li>
                                <li>
                                    <a href="#">Freebies</a>
                                </li>
                            </ul>
                        </div>
                        <div class="col-lg-6">
                            <ul class="list-unstyled mb-0">
                                <li>
                                    <a href="#">JavaScript</a>
                                </li>
                                <li>
                                    <a href="#">CSS</a>
                                </li>
                                <li>
                                    <a href="#">Tutorials</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <!-- /.row -->

</div>
<!-- /.container -->
