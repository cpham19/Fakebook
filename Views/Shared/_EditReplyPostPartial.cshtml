@{
    ViewData["Title"] = "Edit Reply Post";
}
@model ReplyPost

<div id="content">
    <h1 class="text-light">Editting Reply #@Model.ReplyPostId</h1>
    <form method="post" asp-route-ReplyPostId="@Model.ReplyPostId">
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1">Description</span>
            </div>
            <textarea class="form-control" name="Description" placeholder="Description" required>@Model.Description</textarea>
            <button style="width:100px" type="submit"><i class="fas fa-edit"></i></button>
        </div>
        <span asp-validation-for="Description" class="text-danger"></span>
    </form>
</div>