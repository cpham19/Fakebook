@{
    ViewData["Title"] = "Blogs";
}

<style>
    .card-link {
        position: absolute;
        bottom: 0;
        font-size: 15px;
    }

    .card {
        width: 300px;
    }

    @@media only screen and (max-width: 600px) {
        .card {
            width: 500px;
        }
    }
</style>

<div class="jumbotron">
    <div class="container">
        <h1 class="display-3">Blogs</h1>
    </div>
</div>

@if (ViewBag.Blogs.Count == 0)
{
    <div class="jumbotron">
        <div class="container">
            <h1 class="display-4">You have no blogs.</h1>
        </div>
    </div>
}
else
{
    <div class="container">
        <!-- Example row of columns -->
        <div class="row">
            @foreach (var blog in ViewBag.Blogs)
            {
                <div class="col-sm-4 d-flex align-items-stretch portfolio-item">
                    <div class="card">
                        <div class="card-body">
                            <img src="@blog.PictureUrl" class="card-img-top" />
                            <h1>@blog.Title</h1>
                            <p class="card-text">@blog.Description</p>
                            <a class="card-link" asp-controller="Blog" asp-action="ReadBlog" asp-route-BlogId="@blog.BlogId"><i class="fas fa-book-reader"></i> View</a>
                        </div>
                    </div>
                </div>
            }
        </div>
        <hr>
    </div> <!-- /container -->
}