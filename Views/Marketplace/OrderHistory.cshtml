
@{
    ViewData["Title"] = "Order History";
}

@model List<Order>

<style>
    .box {
        border: solid 1px;
    }
</style>

<div class="jumbotron">
    <div class="container">
        <h1 class="display-3">Order History</h1>
    </div>
</div>

@foreach(var order in Model) {
<div class="box">
    <div class="row">
        <div class="col-md-2">
            @order.OrderDate
        </div>
    </div>
    @foreach(var item in order.OrderItems) {
    <div class="row">
        <div class="col-md-2">
            <img src="@item.OrderItemImageUrl" width="150px" height="150px">
        </div>
        <div class="col-md-9">
            <div class="row">
                <div class="col-md-12">
                    <span class="label label-info">
                        <a asp-controller="Marketplace" asp-action="StoreItem" asp-route-StoreId="@item.StoreId" asp-route-StoreItemId="@item.StoreItemId">@item.OrderItemName</a>
                    </span><br>
                    Quantity: @item.OrderItemQuantity<br />
                    $@item.OrderItemPrice<br>
                </div>
                <div class="col-md-12">
                    Sold by <a asp-controller="Marketplace" asp-action="Store" asp-route-StoreId="@item.StoreId">@item.StoreName</a>
                </div>
            </div>
        </div>
    </div>
    <br />
    }
    <div class="row">
        <div class="col-md-2">
            Total: $@order.Total
        </div>
    </div>
</div>
    <br/>
}