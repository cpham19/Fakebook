
@{
    ViewData["Title"] = "Cart";
}

@model List<Order>

<style>
    .lead {
        text-align: right;
    }

    .btn-info {
        float: right;
    }

    table {
        background-color: beige;
        border: solid 3px;
    }

    .btn-group a {
        padding: 20px;
        width: 200px;
    }

    @@media (max-width: 768px) {
        .btn-group a {
            padding: 20px;
            width: 100%;
        }
    }
</style>

<div id="content">
    <div class="jumbotron">
        <div class="container-fluid">
            <h1 class="display-3 text-light">Shopping Cart</h1>
        </div>
    </div>

    <div class="btn-group">
        <a asp-controller="Marketplace" asp-action="Cart" class="btn btn-info">View Cart</a>
        <a asp-controller="Marketplace" asp-action="SalesHistory" class="btn btn-dark">View Sales History</a>
        <a asp-controller="Marketplace" asp-action="OrderHistory" class="btn btn-secondary">View Order History</a>
    </div>

    <br/><br/>

    @if (Model.Count == 0)
    {
        <div class="jumbotron">
            <div class="container-fluid">
                <h1 class="display-3 text-light">Empty</h1>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-lg-9">
                @foreach (var order in Model)
                {
                    if (order.OrderItems.Count != 0)
                    {
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">Name</th>
                                    <th scope="col">Price</th>
                                    <th scope="col">Quantity</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var item in order.OrderItems)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex w-100 justify-content-between">
                                                <h5 class="mb-1">
                                                    <img src="@item.OrderItemImageUrl" width="100px" height="100px" />
                                                    <a asp-controller="Marketplace" asp-action="StoreItem" asp-route-StoreId="@order.StoreId" asp-route-StoreItemId="@item.StoreItemId">@item.OrderItemName</a>
                                                </h5>
                                            </div>
                                            <small>
                                                Sold by <a asp-controller="Marketplace" asp-action="Store" asp-route-StoreId="@order.StoreId">@order.StoreName</a><br />
                                                <a asp-controller="Marketplace" asp-action="DeleteOrderItem" asp-route-OrderItemId="@item.OrderItemId">Delete</a>
                                            </small>
                                        </td>
                                        <td>$@item.OrderItemPrice</td>
                                        <td>@item.OrderItemQuantity</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <br />
                        <br />
                    }
                }

                @if (Model.Count != 0)
                {
                    <hr />
                    <p class="lead">
                        <a class="btn btn-info" asp-controller="Marketplace" asp-action="Checkout">Checkout</a>
                    </p>
                }
            </div>
        </div>
    }
</div>