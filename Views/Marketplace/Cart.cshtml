
@{
    ViewData["Title"] = "Cart";
}

@model Cart

<style>
    .lead {
        text-align: right;
    }
</style>

<h1>Shopping Cart</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">Quantity</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">
                            <a asp-controller="Marketplace" asp-action="StoreItem" asp-route-StoreId="@item.StoreId" asp-route-StoreItemId="@item.StoreItemId">@item.CartItemName</a>
                        </h5>
                    </div>
                    <small><a asp-controller="Marketplace" asp-action="DeleteCartItem" asp-route-CartItemId="@item.CartItemId">Delete</a></small>
                </td>
                <td>$@item.CartItemPrice</td>
                <td>@item.CartItemQuantity</td>
            </tr>
        }
    </tbody>
</table>
<hr />

<p class="lead">
    TOTAL: $@Model.Total
</p>

<ul class="list-group">
    @foreach (var item in Model.Items)
    {
        <li class="list-group-item">
            <div class="container">
                <a></a>
            </div>
        </li>
    }
</ul>
